{
  "manifest_version": 3,
  "name": "Linklift Profile Scraper",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://f5eb48b4c478.ngrok-free.app/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon_16x16.png"
    }
  },

  "icons": {
    "16": "img/icon_16x16.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://www.linkedin.com/*"]
    },
    {
      "resources": ["view.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
